<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.boom"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ktn.boom.SplashScreen"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|fontScale|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" /> 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ktn.boom.Menu"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|fontScale|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="ktn.boom.TouchDragExample"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|fontScale|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="ktn.boom.PuzzlesActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|fontScale|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>     
         <activity
            android:name="ktn.boom.MenuScrollerActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|fontScale|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="ktn.boom.HelpActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|fontScale|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
    </application>
	
</manifest>
